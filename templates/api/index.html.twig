{% extends 'base.html.twig' %}

{% block title %}Hello APIController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; background: #F5F5F5;}
</style>

<div class="example-wrapper">
    {% for quote in quotes %}
        <ul>
            <li>Id : {{ quote.id }}</li>
            <li>Citation : {{ quote.strQuote }}</li>
            <li>Note : {{ quote.rating }}</li>
            <li>Date : {{ quote.date | date('d/m/y') }}</li>
        </ul>
    {% endfor %}
</div>
{% endblock %}
